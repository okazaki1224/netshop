<h1>左３使ってジャンル検索</h1>
<table>
  <thead><tr><th>ジャンル検索</th></tr></thead>
  <tbody>
  <% @genres.each do |genre| %>

  <tr>
  <td><%= link_to genre.name, items_path(genre_id: genre.id) %></td>
  </tr>

  <% end %>
  </tbody>
</table>

<p>１挟む</p>

<h1>商品一覧（全<%= @items.count %>件）</h1>
<% @items.each do |item| %>
<table>
  <tr><td><%= image_tag item.image.variant(resize_to_limit:[200,200]) %></td></tr>
  <tr><td>
    <%= link_to item_path(item.id) do %>
    <%= item.name %>
    <% end %>
  </td></tr>
  <tr><td>￥<%= item.price %></td></tr>
</table>
<% end %>