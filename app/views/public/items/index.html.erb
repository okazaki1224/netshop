<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', genres: @genres %>
    </div>

    <div class="col-md-9">
      <h1>商品一覧（全<%= @items.count %>件）</h1>
      <div class="d-flex flex-wrap"> 
        <% @items.each do |item| %>
        <div class="w-25 mb-3">
          <% if item.image.present? %>
            <%= image_tag item.image.variant(resize_to_limit:[200,200]) %>
          <% else %>
            <%= image_tag 'no_image.jpg' %>
          <% end %>

          <div>
            <%= link_to item_path(item.id) do %>
              <%= item.name %>
            <% end %></br>
            <p>￥<%= item.price %></p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>