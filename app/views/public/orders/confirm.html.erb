<h1>注文情報確認画面</h1>
<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
  <% @total = 0 %>
  <% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.add_tax_price %></td>
    <td><%= cart_item.item.amount %></td>
    <td><%= cart_item.item.add_tax_price*cart_item.item.amount %></td>
  </tr>
  <% end %>
</table>

<table>
  <tr>
    <th>送料</th>
    <td>800？</td>
  </tr>
  <tr>
    <th>商品合計</th>
    <td><% @total += cart_item.subtotal %></td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td>@total</td>
  </tr>
</table>

<table>
  <tr>
    <td><h3>支払方法</h3></td>
    <td><% if Order.payment_methods == 0 %>
        クレジットカード(Order.payment_methods_i18n[:credit_card])
        <% else %>
        銀行振込(Order.payment_methods_i18n[:transfer])
        <% end %>
    </td>
  </tr>
  <tr>
    <td><h3>お届け先</h3></td>
    <td>
      <%= @order.postal_code %><%= @order.address %><%= @order.name %>
    </td>
  </tr>

</table>
