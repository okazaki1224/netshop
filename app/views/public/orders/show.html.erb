<h1>注文履歴詳細</h1>
<h3>注文情報</h3>
<table border="1" style="border-collapse: collapse">
    <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
        <th>配送先</th>
        <td><%= @order.address %></td>
    </tr>
    <tr>
        <th>支払方法</th>
        <td>
            <%= @order.payment_method_i18n %>
        </td>
    </tr>
    <tr>
        <th>ステータス</th>
        <td><%= @order.order_status_i18n %></td>
    </tr>
</table>

<h3>請求情報</h3>
<table border="1" style="border-collapse: collapse">
    <tr>
        <th>商品合計</th>
        <td>ここにトータル</td>
    </tr>
    <tr>
        <th>配送料</th>
        <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
        <th><b>ご請求額</b></th>
        <td><%= @order.total_payment %></td>
    </tr>
</table>

<h3>注文内容</h3>
<table border="1" style="border-collapse: collapse">
    <tr>
        <th>商品　　　　　　　　　　　　　　</th>
        <th>単価（税込）　　</th>
        <th>個数　　</th>
        <th>小計　　</th>
    </tr>
　  <% @order.items.each do |item| %>
    <tr>
        <td><%= item.name %></td>
        <td><%= item.add_tax_price %></td>
        <td><%#= order.order_detail.amount %></td>
        <td><%#= item.add_tax_price*cart_item.amount %></td>
    </tr>
    <% end %>
</table>