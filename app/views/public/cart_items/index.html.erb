<h1>ショッピングカート</h1>
<%= link_to "カートを空にする",destroy_all_path, method: :delete %>
<table>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
    <% @total = 0 %>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.item.image.variant(resize_to_limit:[50,50]) %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.add_tax_price %></td>
      <%= form_with model: cart_item, url: cart_item_path(cart_item.id), local: true do |f| %>
      <td>
        <%= f.select :amount,*[1..20],include_blank: true %><%= f.submit "更新" %>
      </td>
      <% end %>
      <td><%= cart_item.subtotal %></td>
      <% @total += cart_item.subtotal %>
      <td><%= link_to "削除する",cart_item_path(cart_item.id), method: :delete %></td>
    </tr>
  <% end %>
 </table>
<h3>合計金額　<%= @total %></h3>
