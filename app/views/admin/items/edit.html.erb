<div><h3>　商品編集</h3></div>
<div>　</div>
<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
<div class="col-md-9 offset-md-3">
  <table>
    <tr>
      <td><h4>商品画像</h4></td>
      <td><%= f.file_field :image, accept:"image/*" %></td>
    </tr>
    <tr>
      <td><h4>商品名</h4></td>
      <td><%= f.text_field :name, size: "40" %></td>
    </tr>
    <tr>
      <td><h4>商品説明</h4></td>
      <td><%= f.text_area :introduction, size: "40" %></td>
    </tr>
    <tr>
      <td><h4>ジャンル</h4></td>
      <td><%= f.collection_select(:genre_id,@genres,:id,:name) %></td>
    </tr>
    <tr>
      <td><h4>税抜価格</h4></td>
      <td><%= f.number_field :price, size: "40" %>円</td>
    </tr>
    <tr>
      <td><h4>販売ステータス</h4></td>
      <td>
        <%= f.radio_button:is_active, true %>
        <%= f.label:is_active, "販売中", {value:true, style:"display:inline-box;"} %>
        <%= f.radio_button:is_active, false %>
        <%= f.label:is_active, "販売停止中", {value:false, style:"display:inline-box;"} %>
      </td>
    </tr>
</table>
</div>
<div class="nav justify-content-center">
  <%= f.submit '変更を保存',class:"btn btn-success" %>
</div>
    <% end %>


