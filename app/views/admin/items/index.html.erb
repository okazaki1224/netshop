<h3>　商品一覧</h3>
<div>　</div>
<div>
  <table class= "col-md-11">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>商品説明</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price %></td>
      <td><%= item.introduction %></td>
      <td><%= item.genre.name %></td>
      <td><% if item.is_active==true %>
          販売中
          <% else %>
          販売停止中
          <% end %>
      </td>
      <td><%= link_to "削除",admin_item_path(item.id), method: :delete %></td>
    </tr>
    <% end %>
  </table>
</div>

<div>　</div>
<div class="nav justify-content-center">
  <%= paginate @items %>
</div>