
<div><h3>　商品詳細</h3></div>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= image_tag @item.image.variant(resize_to_limit:[200,200]) %>
    </div>
    <div class="col-md-8">
      <table>
        <tr>
          <td><h4>商品名</h4></td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td><h4>商品説明</h4></td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td><h4>ジャンル</h4></td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>
            <h4>税込価格</br>
            (税抜価格)</h4>
          </td>
          <td><%= @item.add_tax_price %>(<%= @item.price %>)円</td>
        </tr>
        <tr>
          <td><h4>販売ステータス</h4></td>
          <td>
            <% if @item.is_active==true %>
              販売中
            <% else%>
              販売停止中
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
 <div>　</div>
<div class="nav justify-content-center">
  <%= link_to "編集する",edit_admin_item_path(@item.id),class:"btn btn-success" %>
</div>