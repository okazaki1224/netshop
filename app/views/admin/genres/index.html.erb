<h2>ジャンル一覧・追加</h2>
<table>
  <tr>
    <td><h4>ジャンル名</h4></td>
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <td><%= f.text_field :name %></td>
    <td><%= f.submit '新規登録' %></td>
    <% end %>
  </tr>
</table>

<table>
  <tr>
    <th>ジャンル</th>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
    <td><h4><%= genre.name %></h4></td>
    <td><%= link_to '編集する', edit_admin_genre_path(genre.id) %></td>
  </tr>
  <% end %>
</table>




