<h1>トップ画面 兼 注文履歴一覧</h1>
<table>
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at %></td>
    <td><%= order.name %></td>
    <td><%= order.order_detail.amount %></td>
    <td>注文ステータス</td>
  </tr>
  <% end %>
</table>

<%= paginate @orders %>