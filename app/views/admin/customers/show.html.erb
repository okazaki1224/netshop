<table class="col-md-8">
  <tr>
    <td>会員ID</td>
    <td><%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    <td></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    <td></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td>
      <% if @customer.is_deleted==false %>
        <p class="text-success">有効</p>
      <% else%>
        <p>退会</p>
      <% end %>
    </td>
  </tr>
  <tr>
    <td></td>
    <td><%= link_to "編集する",edit_admin_customer_path(@customer.id),class:"btn btn-success" %></td>
    <td><%= link_to "注文履歴一覧を見る",admin_order_path(@customer.id),class:"btn btn-primary" %></td>
  </tr>

</table>


