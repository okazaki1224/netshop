<h2><%= @customer.last_name %><%= @customer.first_name%>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
 <table>
   <tr>
    <td><h4>会員ID</h4></td>
    <td><%= @customer.id %></td>
  </tr>

  <tr>
    <td><h4>氏名</h4></td>
    <td><%= f.text_field :last_name %></td>
    <td><%= f.text_field :first_name %></td>
  </tr>

  <tr>
    <td><h4>フリガナ</h4></td>
    <td><%= f.text_field :last_name_kana %></td>
    <td><%= f.text_field :first_name_kana %></td>
  </tr>

  <tr>
    <td><h4>郵便番号</h4></td>
    <td><%= f.number_field :postal_code %></td>
  </tr>

  <tr>
    <td><h4>住所</h4></td>
    <td><%= f.text_field :address %></td>
  </tr>

  <tr>
    <td><h4>電話番号</h4></td>
    <td><%= f.number_field :telephone_number %></td>
  </tr>

  <tr>
    <td><h4>メールアドレス</h4></td>
    <td><%= f.text_field :email %></td>
  </tr>

  <tr>
    <td><h4>会員ステータス</h4></td>
    <td>
      <%= f.label:is_deleted, "有効", {value:false, style:"display:inline-box;"} %>
      <%= f.radio_button:is_deleted, false %>
      <%= f.label:is_deleted, "退会", {value:true, style:"display:inline-box;"} %>
      <%= f.radio_button:is_deleted, true %>
    </td>
  </tr>

  <tr>
    <td></td>
    <td><%= f.submit '変更を保存緑色' %></td>
  </tr>
 </table>

<% end %>
