<h1>注文履歴詳細</h1>
<table>
  <tr>
    <td>購入者</td>
    <td><%= @order_detail.order.name %></td>
  </tr>
  <tr>
    <td>注文日</td>
    <td><%= @order_detail.created_at %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td><%= @order_detail.order.postal_code %> <%= @order_detail.order.address %></br><% @order_detail.order.name %></td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= f.select :payment_method, Order.payment_methods_i18n.invert %></td>
  </tr>
  <tr>
    <td>注文ステータス</td>
    <td><%= f.select :order_status, Order.order_statuses_i18n.invert %></td>
    <td><%= f.submit '更新' %></td>
  </tr>
</table>

<table>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
    <th></th>
  </tr>
  <% @order_details.each do |order_detail| %>
  <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.purchase_price %></td>
    <td><%= order_detail.amount %></td>
    <td><%= order_detail.purchase_price*order_detail.amount %></td>
    <td><%= f.select :order_status, Order.order_statuses_i18n.invert %></td> %></td>
    <td><%= f.submit '更新' %></td>
  </tr>

  <% end %>
</table>

 <%= paginate @items %>